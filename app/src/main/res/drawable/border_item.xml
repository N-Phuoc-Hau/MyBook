<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền bên trong (nếu cần, có thể bỏ qua nếu chỉ muốn border) -->
    <solid android:color="#FFFFFF" /> <!-- Màu nền trắng -->

    <!-- Định nghĩa border -->
    <stroke android:width="4dp"  android:color="#FF0000" />

    <!-- Tùy chọn: Góc bo tròn -->
    <corners android:radius="8dp" /> <!-- Bo góc 8dp -->

    <!-- Tùy chọn: Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>