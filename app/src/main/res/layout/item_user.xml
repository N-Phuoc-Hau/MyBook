<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/ftbDel"
        android:src="@drawable/ic_cancel"
        app:backgroundTint="@color/white"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/llItem"
        app:layout_constraintTop_toTopOf="@id/llItem"
        app:layout_constraintRight_toRightOf="@id/llItem"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ftbUpdate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/ic_update"
        app:backgroundTint="@color/white"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/llItem"
        app:layout_constraintTop_toBottomOf="@id/ftbDel"
        app:layout_constraintRight_toRightOf="@id/llItem"/>
    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>